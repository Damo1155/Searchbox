{
  "compileOnSave": false,
  "include": [
    "src/TS/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    // "moduleResolution": "Node",
    // "newLine": "crlf",
    // "declaration": true,
    // "removeComments": true,
    // "isolatedModules": true,
    // //"emitDeclarationOnly": true,
    // "allowUnreachableCode": false,
    // "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "Types/*": [ "src/TS/Types/*" ],
      "Shared/*": [ "src/TS/Shared/*" ],
      "Services/*": [ "src/TS/Services/*" ],
      "Listeners/*": [ "src/TS/Listeners/*" ]
    }
  }
}