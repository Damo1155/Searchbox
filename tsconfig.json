{
  "compileOnSave": false,
  "include": [
    "src/TS/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "newLine": "crlf",
    "declaration": true,
    "removeComments": true,
    "isolatedModules": true,
    //"emitDeclarationOnly": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "Enums/*": [ "src/TS/Types/*" ],
      "Models/*": [ "src/TS/Models/*" ],
      "Shared/*": [ "src/TS/Shared/*" ],
      "Services/*": [ "src/TS/Services/*" ],
      "Structure/*": [ "src/TS/Structure/*" ],
      "Listeners/*": [ "src/TS/Listeners/*" ]
    }
  }
}